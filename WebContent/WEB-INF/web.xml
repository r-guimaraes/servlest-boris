<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>exemplo</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>ExemploServlet</servlet-name>
    <servlet-class>ExemploServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExemploServlet</servlet-name>
    <url-pattern>/servlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Ch3 Beer</servlet-name>
    <servlet-class>com.example.web.BeerSelect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Ch3 Beer</servlet-name>
    <url-pattern>/SelectBeer.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Servlet Redirecionando</servlet-name>
    <servlet-class>ServletRedir</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Servlet Redirecionando</servlet-name>
    <url-pattern>/Redir.boris</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Boa Noite Servlet</servlet-name>
    <servlet-class>BoaNoiteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Boa Noite Servlet</servlet-name>
    <url-pattern>/boanoite.boris</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Getting web.xml Info</servlet-name>
    <servlet-class>ShareInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Getting web.xml Info</servlet-name>
    <url-pattern>/share</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Initial Config</servlet-name>
    <servlet-class>Init</servlet-class>
    <init-param>
      <param-name>msg</param-name>
      <param-value> Esta é a mensagem inicial do borão </param-value>
    </init-param>
    <init-param>
      <param-name>dia</param-name>
      <param-value> segunda-feira, 25 junho 2012 </param-value>
    </init-param>
    <init-param>
      <param-name>autor</param-name>
      <param-value> webmaster@rodrigodeoliveira.net </param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Initial Config</servlet-name>
    <url-pattern>/initialConfig.bb</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login Servlet</servlet-name>
    <servlet-class>com.bhorist.banco.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login Servlet</servlet-name>
    <url-pattern>/login.bo</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Saldo Servlet</servlet-name>
    <servlet-class>com.bhorist.banco.SaldoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Saldo Servlet</servlet-name>
    <url-pattern>/saldo</url-pattern>
  </servlet-mapping>
</web-app>